{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "./Server",
    "outDir": "./dist/Server",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types"],  // ✅ removed the "./" that caused the issue
    "moduleResolution": "node"
  },
  "include": [
    "Server/**/*.ts",
    "global.d.ts"   // ✅ ensures req.user typing is loaded
  ],
  "exclude": ["node_modules", "dist", "src", "public"]
}
